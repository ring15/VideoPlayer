<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="video" />

    <Button
        android:id="@+id/btn_video_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="videoView" />

    <Button
        android:id="@+id/btn_surface_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="surfaceView" />

    <Button
        android:id="@+id/btn_spannable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="spannable" />

    <Button
        android:id="@+id/btn_exoplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exoplayer"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_jiaozi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jiaozi"
        android:onClick="onClick"/>

</LinearLayout>